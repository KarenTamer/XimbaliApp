        android:textSize="20sp"
        app:icon="@drawable/icon"
        app:iconSize="40dp"
        app:iconTintMode="multiply"
        app:layout_constraintBottom_toTopOf="@+id/bCam"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="2dp" />

    <Button
        android:id="@+id/bCam"
